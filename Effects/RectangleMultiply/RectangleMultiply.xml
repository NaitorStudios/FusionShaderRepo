<effect>
    <name>RectangleMultiply</name>
    <author>Myp</author>
    <description>This shader creates a bordered rectangle by multiplying the colors of a background image with the main image only within the rectangle's area, leaving the border area as a solid color. The rectangle's size, border thickness, and color are customizable parameters.</description>
    <BackgroundTexture>1</BackgroundTexture>

    <parameter>
        <name>Width</name>
        <code>fWidth</code>
        <description>Image width (update if size changes)</description>
        <type>float</type>
        <property>edit</property>
        <value>32.0</value>
    </parameter>

    <parameter>
        <name>Height</name>
        <code>fHeight</code>
        <description>Image height (update if size changes)</description>
        <type>float</type>
        <property>edit</property>
        <value>32</value>
    </parameter>

    <parameter>
        <name>Border</name>
        <code>fBorder</code>
        <description>Border thickness</description>
        <type>float</type>
        <property>edit</property>
        <value>1.0</value>
    </parameter>

    <parameter>
        <name>Color</name>
        <code>fColor</code>
        <description>Border color</description>
        <type>int_float4</type>
        <property>COLOR</property>
        <value>0</value>
    </parameter>
</effect>