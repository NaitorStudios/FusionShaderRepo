<effect>
<name>Colorize: Cyan + Luminance</name>
<description>Change the cyan parts to colorized ones</description>
<author>Sphax - Flavien Clermont</author>
<company>Complex-softwares</company>
<website>http://complex.softwares.free.fr</website>
<parameter>
		<name>Color tint</name>
		<code>fTint</code>
		<description>Wanted color for cyan parts</description>
		<type>int_float4</type>
		<property>COLOR</property>
		<value>0</value>
</parameter>
<parameter>
		<name>Error</name>
		<code>fCoeff</code>
		<description>Accepted error to consider the cyan as a colorizable one (0-1)</description>
		<type>float</type>
		<property>edit</property>
		<value>0.01</value>
		<min>0.0</min>
</parameter>
<parameter>
	<name>Minimum Luminance</name>
	<code>fMinLuminance</code>
	<description>Minimum luminance threshold</description>
	<type>float</type>
	<property>edit</property>
	<value>0.2</value>
	<min>0.0</min>
	<max>1.0</max>
</parameter>
<parameter>
	<name>Maximum Luminance</name>
	<code>fMaxLuminance</code>
	<description>Maximum luminance threshold</description>
	<type>float</type>
	<property>edit</property>
	<value>0.8</value>
	<min>0.0</min>
	<max>1.0</max>
</parameter>
</effect>

